{
  "name": "nous-functions",
  "version": "1.0.0",
  "private": true,
  "description": "Firebase Functions for NOUS OS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "clean": "rm -rf dist",
    "lint": "eslint src"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@nous/types": "workspace:*",
    "@nous/vfs": "workspace:*",
    "@nous/config": "workspace:*",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^6.2.0",
    "openai": "^4.77.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "firebase-functions-test": "^3.3.0"
  }
}
